<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scanner">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/ll_desc"
        android:visibility="invisible"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="4.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:text="Category"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/cat_id"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="0"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="Desc"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="0"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="Box Quantity"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/box_quant"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="0"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:layout_margin="10dp"
            android:gravity="center"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_scan"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="Scan Products"
                android:textColor="@color/white"
                android:textSize="20dp">

            </Button>
        </LinearLayout>

        </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/ll_desc_down"
        android:layout_below="@+id/ll_desc"
        android:visibility="invisible"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:text="Board No"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/board_no"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="0"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="Date"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/date"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="0"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="PONO"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/pono"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="0"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="Location"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/loc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="0"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="Product Quantity"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/prod_quant"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="50"
                android:text="0"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


</RelativeLayout>